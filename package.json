{
  "name": "resto-dashboard",
  "version": "1.0.0",
  "scripts": {
    "php-server": "php -S localhost:8000 -t .",
    "watch": "browser-sync start --proxy 'localhost:8000' --files 'assets/css/*.css, assets/js/*.js, **/*.php'",
    "dev": "npm-run-all --parallel php-server watch"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "npm-run-all": "^4.1.5"
  }
}